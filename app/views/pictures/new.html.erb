<h1>Add a picture</h1>

<!-- rails provide form helpers that write html code for creating the form
 -->

<%= form_tag "/pictures" do %>
  <p>
    <%= label_tag :artist %><br>
    <%= text_field_tag :artist %>
  </p>
  <p>
    <%= label_tag :title %><br>
    <%= text_field_tag :title %>
  </p>
  <p>
    <%= label_tag :url %><br>
    <%= text_field_tag :url %>
  </p>
  <p>
    <%= submit_tag "Save" %>
  </p>
<% end %>